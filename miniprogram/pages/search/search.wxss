/* pages/search/search.wxss */
.nologinremind{
  text-align: center;
  font-size: 125%;
  color: gray;
  margin-top: 20rpx;
}

.advertising{
  margin-top: 100rpx;
  width: 750rpx;
  height: 850rpx;
}

.record{
  display: flex;
  flex-direction: row;
  align-items: center;
  border:3rpx solid #63065f;
  height: 200rpx;
  margin: 30rpx 30rpx 30rpx 30rpx;
  border-radius: 30rpx;
  color: #63065f;
}
/* 记账类型 */
.recordtype{
  font-size:100%;
  margin-left: 30rpx;
  margin-top: 15rpx;
  margin-bottom: 5rpx;
}
/* 记账金额 */
.recordbalance,.recordmessage,.recorddata{
  font-size: 80%;
  margin-left: 30rpx;
}
.text{
  font-weight: bold;
  margin-top: 20rpx;
  margin-left: 50rpx;
  margin-bottom: 20rpx;
}
.textio{
  padding: 10rpx 10rpx 10rpx 10rpx;
  font-size: 120%;
  color: #63065f;
  height: auto;
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-top: 10rpx;
  margin-bottom:10rpx;
  border: #63065f solid 3rpx;
  border-radius: 15rpx;
  margin-top: 5rpx;
}
button{
  background-color: #63065f;
  height: 80rpx;
  line-height: 80rpx;
  margin: 30rpx 50rpx 30rpx 50rpx;
  border-radius: 30rpx;
  color: #fff;
}
picker-view{
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-bottom: 30rpx;
  height: 80rpx;
  border: #63065f solid 3rpx;
}